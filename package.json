{
	"name": "serverless-parking-workshop-service",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"preinstall": "./.scripts/removeFrontendBinDependencies",
		"prepare": "husky install && ./.scripts/linkFrontendBinDependencies",
		"env:vscode": "env-cmd -f .env bash -c \"ssocreds -p \\$AWS_PROFILE\" && npm run set-stage",
		"env": "env-cmd -f .env bash -c \"ssocreds -p \\$AWS_PROFILE\" && npm run set-stage && env-cmd -f .env",
		"set-stage": "./.scripts/setStage",
		"lint": "eslint 'src' 'stacks' --ext .ts,.tsx,.js,.jsx,.json && prettier -c \"src/**/*.{graphql,gql,html}\"",
		"lint:fix": "eslint 'src' 'stacks' --ext .ts,.tsx,.js,.jsx,.json --fix && prettier --write \"src/**/*.{graphql,gql,html}\"",
		"start": "npm run env -- sst start",
		"build": "npm run env -- sst build",
		"deploy": "npm run env -- sst deploy",
		"remove": "npm run env -- sst remove",
		"console": "npm run env -- sst console",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"tdd": "vitest --watch",
		"graphql-codegen": "graphql-codegen --config codegen.yml"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": "eslint --fix",
		"*.{graphql,gql,html}": "prettier --write"
	},
	"devDependencies": {
		"aws-cdk-lib": "2.24.0",
		"@serverless-stack/cli": "^1.4.0",
		"@serverless-stack/resources": "^1.4.0",
		"typescript": "^4.7.4",
		"@types/node": "17.0.44",
		"@tsconfig/node16": "^1.0.3",
		"vitest": "^0.18.0",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "7.29.4",
		"eslint-plugin-react-hooks": "^4.5.0",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"@typescript-eslint/eslint-plugin": "5.22.0",
		"@typescript-eslint/parser": "5.22.0",
		"@microsoft/eslint-plugin-sdl": "^0.2.0",
		"@commitlint/cli": "^16.0.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/typescript": "^2.5.1",
		"@graphql-codegen/typescript-operations": "^2.4.2",
		"@purple/serverless-git-branch-stage-plugin": "^1.3.2",
		"@sls-next/lambda-at-edge": "^3.7.0",
		"aws-sdk": "^2.1171.0",
		"env-cmd": "^10.1.0",
		"husky": "^8.0.1",
		"lint-staged": "^11.2.6",
		"prettier": "^2.6.2"
	},
	"workspaces": [
		"services/*",
		"packages/*"
	]
}
